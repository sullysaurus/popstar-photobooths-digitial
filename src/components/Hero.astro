<section class="relative min-h-screen flex flex-col">
    <!-- Decorative Background Pattern -->
    <div class="absolute inset-0 z-0 bg-black">
        <div class="absolute inset-0 opacity-10">
            <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='1'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
        </div>
    </div>

    <!-- Main Video Background -->
    <div class="absolute inset-0 z-1">
        <video 
            class="w-full h-full object-cover"
            autoplay 
            loop 
            muted 
            playsinline
        >
            <source src="videos/header-bg.mp4" type="video/mp4">
        </video>
        <!-- Subtle gradient overlay -->
        <div class="absolute inset-0 bg-gradient-to-b from-black/30 via-black/10 to-black/40"></div>
    </div>

    <!-- Top Logo -->
    <div class="relative z-10 w-full flex justify-end p-6 animate-fade-in">
        <a href="/" class="w-40 md:w-48 opacity-90 hover:opacity-100 transition-opacity duration-300">
            <img 
                src="/images/logo.png" 
                alt="Popstar Photo Booths" 
                class="w-full h-auto brightness-0 invert"
            />
        </a>
    </div>

    <!-- Centered Content -->
    <div class="relative z-10 flex-grow flex items-end animate-fade-up">
        <div class="w-full bg-black/20 backdrop-blur-sm">
            <div class="container mx-auto px-6 py-8">
                <div class="flex flex-col md:flex-row items-center justify-between gap-6">
                    <!-- Left side -->
                    <div class="text-center md:text-left">
                        <h1 class="text-2xl md:text-3xl text-white font-light mb-2">
                            RALEIGH'S FUNNEST PHOTO BOOTH EXPERIENCE
                        </h1>
                        <div class="flex items-center justify-center md:justify-start gap-2">
                            <span class="text-yellow-400">â˜…â˜…â˜…â˜…â˜…</span>
                            <span class="text-white/90 text-sm">50+ Five Star Reviews</span>
                        </div>
                    </div>

                    <!-- Right side -->
                    <a 
                        href="#book-now"
                        class="bg-yellow-400 text-black px-8 py-3 rounded-full font-medium inline-flex items-center gap-2 hover:bg-yellow-300 hover:scale-105 transition-all duration-300 group scroll-smooth"
                        onclick="scrollToForm(event)"
                    >
                        Check Availability
                        <svg 
                            xmlns="http://www.w3.org/2000/svg" 
                            class="h-5 w-5 group-hover:translate-x-0.5 transition-transform" 
                            viewBox="0 0 20 20" 
                            fill="currentColor"
                        >
                            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Add this modal HTML just before the closing </section> tag -->
<div id="bookingModal" class="fixed inset-0 bg-black/80 z-50 hidden flex items-center justify-center">
    <div class="bg-white rounded-2xl p-6 max-w-md w-full mx-4 text-center relative">
        <button 
            onclick="closeModal()"
            class="absolute top-2 right-2 text-gray-500 hover:text-gray-700"
        >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
        </button>
        
        <img 
            src="/images/thanks.gif" 
            alt="Exciting Photo Booth Moment" 
            class="w-full rounded-xl mb-4"
        />
        
        <h3 class="text-2xl font-bold mb-2">Exciting News! ðŸŽ‰</h3>
        <p class="text-gray-600 mb-4">
            Keep your phone handy! You'll receive a call from:
            <br />
            <span class="font-semibold text-black">(919) 278-7226</span>
            <br />
            Answer to receive <span class="text-yellow-500 font-bold">$100 OFF</span> your package!
        </p>
        
        <button 
            onclick="closeModal()"
            class="bg-yellow-400 text-black px-6 py-2 rounded-full font-semibold hover:bg-yellow-300 transition-all duration-300"
        >
            Got it!
        </button>
    </div>
</div>

<!-- Update the script section -->
<script>
    function scrollToForm(e) {
        e.preventDefault();
        const form = document.querySelector('#book-now');
        if (form) {
            form.scrollIntoView({ 
                behavior: 'smooth',
                block: 'center'
            });
            
            // Show the modal after a short delay
            setTimeout(() => {
                const modal = document.querySelector('#bookingModal');
                if (modal) {
                    modal.classList.remove('hidden');
                    // Add fade-in animation
                    modal.classList.add('animate-fadeIn');
                }
            }, 800);
        }
    }

    function closeModal() {
        const modal = document.querySelector('#bookingModal');
        if (modal) {
            modal.classList.add('hidden');
        }
    }
</script>

<style>
    @keyframes fadeUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    .animate-fade-up {
        animation: fadeUp 0.8s ease-out forwards;
        animation-delay: 0.2s;
        opacity: 0;
    }

    .animate-fade-in {
        animation: fadeIn 0.6s ease-out forwards;
    }

    @media (max-width: 768px) {
        .min-h-screen {
            min-height: 100svh;
        }
    }

    /* Optional: Add a smooth transition for the blur effect */
    .backdrop-blur-sm {
        transition: backdrop-filter 0.3s ease;
    }

    /* Subtle animation for the background pattern */
    @keyframes subtleFloat {
        0% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-10px);
        }
        100% {
            transform: translateY(0);
        }
    }

    .pattern-bg {
        animation: subtleFloat 20s ease-in-out infinite;
    }

    html {
        scroll-behavior: smooth;
    }

    /* Optional: Add focus styles for better accessibility */
    a:focus-visible {
        outline: 2px solid #FCD34D;
        outline-offset: 2px;
    }

    /* Close button hover effect */
    .modal-close:hover {
        transform: scale(1.1);
    }
</style>
