---
const features = [
    {
        icon: "fa-print",
        title: "Unlimited Prints",
        description: "Everyone gets a print! Whether you love classic 2x6 strips or premium 4x6 prints, there's no limit to the memories you can take home."
    },
    {
        icon: "fa-panorama",
        title: "Chic Backdrops",
        description: "Modern, elegant backdrops included in every package. We can even create custom designs to match your event theme perfectly."
    },
    {
        icon: "fa-glasses",
        title: "Unique Props",
        description: "Not your average props! We take props very seriously (but also very un-seriously) to ensure amazing photos every time."
    },
    {
        icon: "fa-star",
        title: "Amazing Service",
        description: "Don't take our word for it - check our perfect 5-star rating on Google with over 50 glowing reviews!"
    },
    {
        icon: "fa-photo-film",
        title: "Private Gallery",
        description: "Access all your event photos in a private online gallery instantly. Every single photo, not just the prints!"
    },
    {
        icon: "fa-mobile-screen",
        title: "Instant Sharing",
        description: "Photos sent directly to your phone within seconds. Share your memories instantly on social media!"
    }
];
---

<section data-name="features">

    <!-- Black banner at bottom -->
    <div class="relative bg-black/90 backdrop-blur-sm py-8 border-t border-white/10">
        <div class="features-ticker overflow-hidden">
            <div class="flex gap-12 animate-ticker">
                {[...features, ...features, ...features, ...features].map((feature, index) => (
                    <div 
                        data-name={`feature-${index}`}
                        class="feature-item shrink-0 flex items-center gap-6"
                    >
                        <i class={`fas ${feature.icon} text-2xl text-white/90`}></i>
                        <span class="text-xl text-white/90 font-light uppercase tracking-wider whitespace-nowrap">{feature.title}</span>
                    </div>
                ))}
            </div>
        </div>

</section>

<style>
    .features-ticker {
        mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
    }

    .animate-ticker {
        animation: ticker 13.2s linear infinite;
    }

    @keyframes ticker {
        0% {
            transform: translateX(-200%);
        }
        100% {
            transform: translateX(0);
        }
    }

    .features-ticker:hover .animate-ticker {
        animation-play-state: paused;
    }

    .feature-item {
        transition: all 0.3s ease;
    }

    .feature-item:hover {
        transform: scale(1.05);
    }
</style>
