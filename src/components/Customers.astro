---
const logos = [
    { url: "images/logos/apple.png", alt: "logo" },
    { url: "images/logos/briercreek.png", alt: "logo" },
    { url: "images/logos/cam.png", alt: "logo" },
    { url: "images/logos/deloitte.png", alt: "logo" },
    { url: "images/logos/foundation.png", alt: "logo" },
    { url: "images/logos/loop.png", alt: "logo" },
    { url: "images/logos/recity.png", alt: "logo" },
    { url: "images/logos/sofar.png", alt: "logo" },
    { url: "images/logos/tfs.png", alt: "logo" },
    { url: "images/logos/traine.png", alt: "logo" },
    { url: "images/logos/wines.png", alt: "logo" },
    { url: "images/logos/workhub.png", alt: "logo" }
];
---

<div class="bg-black py-16">
    <div class="max-w-[100vw] mx-auto">
        <div class="overflow-hidden">
            <div class="flex gap-8 md:gap-16 logo-scroll">
                {[...logos, ...logos].map((logo, index) => (
                    <div 
                        class="shrink-0 w-32 md:w-40 h-20 md:h-24 flex items-center justify-center opacity-80 hover:opacity-100 transition-opacity duration-300"
                    >
                        <img 
                            src={logo.url} 
                            alt={logo.alt}
                            class="max-h-10 md:max-h-12 max-w-[100px] md:max-w-[120px] w-auto h-auto object-contain brightness-0 invert"
                        />
                    </div>
                ))}
            </div>
        </div>
    </div>
</div>

<style>
    .logo-scroll {
        animation: logoScroll 10s linear infinite;
    }

    @media (max-width: 768px) {
        .logo-scroll {
            animation: logoScroll 3.3s linear infinite;
        }
    }

    @keyframes logoScroll {
        0% {
            transform: translateX(-50%);
        }
        100% {
            transform: translateX(0);
        }
    }

    .logo-scroll:hover {
        animation-play-state: paused;
    }
</style> 