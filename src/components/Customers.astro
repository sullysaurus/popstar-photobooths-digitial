---
const logos = [
    { url: "images/logos/apple.png", alt: "logo" },
    { url: "images/logos/briercreek.png", alt: "logo" },
    { url: "images/logos/cam.png", alt: "logo" },
    { url: "images/logos/deloitte.png", alt: "logo" },
    { url: "images/logos/foundation.png", alt: "logo" },
    { url: "images/logos/loop.png", alt: "logo" },
    { url: "images/logos/recity.png", alt: "logo" },
    { url: "images/logos/sofar.png", alt: "logo" },
    { url: "images/logos/tfs.png", alt: "logo" },
    { url: "images/logos/traine.png", alt: "logo" },
    { url: "images/logos/wines.png", alt: "logo" },
    { url: "images/logos/workhub.png", alt: "logo" }
];
---

<div class="py-16 border-t border-b border-white/10 bg-black">
    <div class="max-w-7xl mx-auto">
        <h3 class="text-xl text-white text-center mb-12 px-4">Trusted by Industry Leaders</h3>
        <div class="logo-scroll">
            <div class="logo-track">
                {[...Array(4)].map(() => (
                    logos.map(logo => (
                        <div class="logo-slide">
                            <img 
                                src={logo.url} 
                                alt={logo.alt}
                                loading="lazy"
                                decoding="async"
                                width="120"
                                height="60"
                                class="h-12 w-auto object-contain brightness-0 invert opacity-0 transition-opacity duration-300"
                                onload="this.style.opacity='1'"
                            />
                        </div>
                    ))
                ))}
            </div>
        </div>
    </div>
</div>

<style>
    .logo-scroll {
        width: 100%;
        overflow: hidden;
        mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
        -webkit-mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
    }

    .logo-track {
        display: flex;
        gap: 48px;
        animation: scroll 40s linear infinite;
        width: max-content;
        padding: 0 24px;
        will-change: transform;
    }

    .logo-slide {
        flex: 0 0 auto;
        min-width: 120px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    @keyframes scroll {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(calc(-120px * 12 - 48px * 11));
        }
    }

    @media (max-width: 768px) {
        .logo-track {
            gap: 32px;
        }
        
        @keyframes scroll {
            0% {
                transform: translateX(0);
            }
            100% {
                transform: translateX(calc(-120px * 12 - 32px * 11));
            }
        }
    }
</style> 