---
const photos = [
    { url: "/images/gallery1.jpeg", alt: "Photo" },
    { url: "/images/gallery2.jpg", alt: "Photo" },
    { url: "/images/gallery3.jpg", alt: "Photo" },
    { url: "/images/gallery4.jpg", alt: "Photo" },
    { url: "/images/gallery5.jpg", alt: "Photo" },
    { url: "/images/gallery6.jpg", alt: "Photo" }
];
---

<section id="gallery" class="min-h-screen relative overflow-hidden flex items-center py-24 bg-black">
    <!-- Starry background -->
    <div class="absolute inset-0">
        <div class="stars"></div>
        <div class="stars2"></div>
        <div class="stars3"></div>
    </div>

    <div class="container mx-auto px-4 relative">
        <div class="text-center mb-20">
            <h2 class="text-7xl font-light mb-6 text-white/90 tracking-wide">Moments in Motion</h2>
            <p class="text-2xl text-white/70 font-light max-w-3xl mx-auto">
                Studio-quality photography meets cutting-edge technology, creating memories that look as incredible as they feel
            </p>
        </div>

        <div class="gallery-scroll-container overflow-hidden">
            <div class="flex gap-12 gallery-scroll">
                {[...photos, ...photos].map((photo, index) => (
                    <div 
                        data-name={`gallery-item-${index}`}
                        class="gallery-item shrink-0 w-[800px] aspect-[16/9] relative group"
                    >
                        <img 
                            src={photo.url} 
                            alt={photo.alt}
                            class="w-full h-full object-cover rounded-3xl shadow-[0_0_30px_rgba(0,0,0,0.3)] 
                                   transform transition-all duration-500 group-hover:scale-105"
                        />
                    </div>
                ))}
            </div>
        </div>
    </div>
</section>

<style>
 
    .gallery-scroll {
        animation: galleryScroll 60s linear infinite;
    }

    @keyframes galleryScroll {
        0% { transform: translateX(0); }
        100% { transform: translateX(calc(-800px * 6 - 12rem * 5)); }
    }

    .gallery-scroll:hover {
        animation-play-state: paused;
    }

    /* Pure CSS stars background */
    .stars, .stars2, .stars3 {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        width: 100%;
        height: 100%;
    }

    .stars::after, .stars2::after, .stars3::after {
        content: "";
        position: absolute;
        width: 3px;
        height: 3px;
        background: transparent;
        box-shadow: 
            15px 15px white,
            125px 35px white,
            50px 80px white,
            10px 120px white,
            275px 90px white,
            230px 10px white,
            120px 130px white,
            300px 130px white,
            220px 115px white;
    }

    .stars {
        animation: animateStars 60s linear infinite;
    }

    .stars2 {
        animation: animateStars 45s linear infinite;
    }

    .stars3 {
        animation: animateStars 30s linear infinite;
    }

    @keyframes animateStars {
        from {
            transform: translateY(0);
        }
        to {
            transform: translateY(-150px);
        }
    }
</style>

