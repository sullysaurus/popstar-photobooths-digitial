---
const photos = [
    { url: "/images/donna-ella.jpeg", alt: "Donna and Ella" },
    { url: "/images/brunch.jpg", alt: "TFS Brunch" },
    { url: "/images/props.jpeg", alt: "Props" },
    { url: "/images/hat.jpeg", alt: "Guy in hat" },
    { url: "/images/bw.jpeg", alt: "Black and white" },
    { url: "/images/silver.jpg", alt: "Silver backdrop" }
];
---

<section data-name="photo-gallery" class="py-16">
    <div class="container mx-auto px-4">
        <h2 data-name="gallery-title" class="text-4xl font-bold text-center mb-12">
            Memories Made Here
        </h2>
        <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
            {photos.map((photo, index) => (
                <div 
                    key={index}
                    data-name={`gallery-item-${index}`}
                    class="aspect-square overflow-hidden rounded-lg shadow-lg"
                >
                    <img 
                        src={photo.url} 
                        alt={photo.alt}
                        class="w-full h-full object-cover hover:scale-110 transition-transform duration-300"
                    />
                </div>
            ))}
        </div>
    </div>
</section>
