---
const packages = [
    {
        name: "The Party Booth",
        tagline: "Digital & Eco-Friendly",
        price: 549,
        image: "/images/gallery7.jpg",
        features: [
            "✨ Digital Only Drop-off Booth",
            "✨ 3 Hours of Booth Time",
            "✨ Eco-Friendly Solution",
            "✨ Professional DSLR & Studio Lighting",
            "✨ Instant Digital Gallery & Sharing"
        ],
        bestDeal: true
    },
    {
        name: "The Popstar Booth",
        tagline: "Classic Photo Booth Fun",
        price: 899,
        image: "/images/gallery5.jpg",
        features: [
            "✨ Unlimited Color or B&W 4x6 or 2x6 Prints",
            "✨ 3 Hours of Booth Time",
            "✨ Premium Backdrop Collection",
            "✨ Instant Digital Gallery & Sharing",
            "✨ Professional Attendant"
        ]
    },
    {
        name: "The VIP Booth",
        tagline: "Ultimate Luxury Experience",
        price: 1099,
        image: "/images/gallery4.jpg",
        features: [
            "✨ Unlimited Color 4x6 or 2x6 Prints",
            "✨ 3 Hours of Booth Time",
            "✨ Luxury Hedge Wall and Neon Sign",
            "✨ Instant Digital Gallery & Sharing",
            "✨ Professional Attendant"
        ],
        highlighted: true
    }
];
---

<section id="pricing" class="py-24 relative overflow-hidden">
    <!-- Video background -->
    <div class="absolute inset-0 w-full h-full">
        <video 
            class="absolute inset-0 w-full h-full object-cover"
            autoplay 
            loop 
            muted 
            playsinline
            poster="/images/pricing-fallback.png"
        >
            <source src="/videos/pricing-bg.mp4" type="video/mp4" />
            <!-- Fallback for browsers that don't support video -->
            <img 
                src="/images/pricing-fallback.png" 
                alt="Popstar Photo Booth Experience" 
                class="absolute inset-0 w-full h-full object-cover"
            />
        </video>
        <div class="absolute inset-0 bg-gradient-to-r from-black/80 via-black/40 to-transparent"></div>
    </div>

    <!-- Overlay -->
    <div class="absolute inset-0 bg-black/60"></div>

    <div class="container mx-auto px-4 relative">
        <h2 data-name="pricing-title" class="text-5xl font-light text-center mb-6 text-white">
            Choose Your Photo Booth Experience
        </h2>
        <p data-name="pricing-subtitle" class="text-center text-gray-100 mb-16 max-w-3xl mx-auto">
            We're not your regular run-of-the-mill photo booth; think of us more like the ultimate party wingman, capturing professional studio-quality photography!
        </p>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-12 max-w-7xl mx-auto">
            {packages.map((pkg, index) => (
                <div 
                    key={index}
                    data-name={`pricing-card-${index}`}
                    class="bg-black/40 backdrop-blur-sm rounded-2xl border-2 border-white/10 hover:border-white/20 transition-all duration-300 relative"
                >
                    {pkg.bestDeal && (
                        <div class="absolute -top-4 left-1/2 -translate-x-1/2 bg-yellow-400 text-black px-4 py-1 rounded-full font-bold text-sm z-10">
                            Best Deal in Raleigh
                        </div>
                    )}
                    <div class="relative h-[200px] md:h-[250px] rounded-t-2xl overflow-hidden">
                        <img 
                            src={pkg.image} 
                            alt={pkg.name} 
                            class="w-full h-full object-cover object-center"
                        />
                        <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent"></div>
                    </div>

                    <div class="p-6 md:p-8">
                        <h3 class="text-3xl font-bold mb-2 text-white">{pkg.name}</h3>
                        <p class="text-gray-300 mb-4 text-lg">{pkg.tagline}</p>
                        <p class="text-4xl font-bold text-white mb-8">${pkg.price}</p>
                        
                        <ul class="space-y-5 mb-10">
                            {pkg.features.map((feature, idx) => (
                                <li key={idx} class="flex items-start gap-4">
                                    <i class="fas fa-check mt-1.5 text-yellow-400"></i>
                                    <span class="font-medium text-white text-lg">
                                        {feature.replace('✨ ', '')}
                                    </span>
                                </li>
                            ))}
                        </ul>

                        {pkg.downgrade && (
                            <div class="mb-10 p-6 border border-yellow-400/30 rounded-xl bg-yellow-400/10">
                                <p class="text-yellow-400 font-medium text-lg flex items-center gap-3">
                                    <i class="fas fa-arrow-down"></i>
                                    {pkg.downgrade.text}
                                </p>
                            </div>
                        )}
                        
                        <a 
                            href="#book-now"
                            onclick="scrollToForm(event)"
                            class="w-full py-5 rounded-full font-bold text-lg transition-all duration-300 inline-flex items-center justify-center gap-3 bg-yellow-400 text-black hover:bg-yellow-300 hover:scale-[1.02] hover:shadow-lg"
                        >
                            Check Availability
                            <svg 
                                xmlns="http://www.w3.org/2000/svg" 
                                class="h-6 w-6 group-hover:translate-x-0.5 transition-transform" 
                                viewBox="0 0 20 20" 
                                fill="currentColor"
                            >
                                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                            </svg>
                        </a>
                    </div>
                </div>
            ))}
        </div>
        
        <div class="mt-20 max-w-3xl mx-auto bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-8">
            <p class="text-center text-lg text-gray-100">
                Looking for something different? We offer all-day packages for extended events, and custom solutions for corporate events. 
                <span class="block mt-2 text-yellow-400 font-medium">
                    Send us a message to discuss your perfect photo experience!
                </span>
            </p>
        </div>
    </div>
</section>
